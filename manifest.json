{
    "manifest_version": 3,
    "name": "USCIS File Uploader",
    "version": "1.0",
    "description": "Upload and preview batch data",
    "action": { "default_title": "Open USCIS Uploader" },
    "background": { "service_worker": "background.js" },
  
    "permissions": [ "storage", "scripting", "activeTab" ],
    "host_permissions": [ "<all_urls>" ],
  
    "content_scripts": [
      {
        "matches": [ "<all_urls>" ],
        "js": [ "content.js" ]
      }
    ],
  
    "web_accessible_resources": [
      {
        "resources": [ "form_filler.js", "mapping.js"], 
        "matches": [ "<all_urls>" ]
      }
    ]
} 
  